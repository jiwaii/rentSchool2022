<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                                  http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <navigation-rule>
        <from-view-id>/views/login.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{userConnectionBean.connectionLogin}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/views/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{userConnectionBean.connectionLogin}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/views/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <application>
        <locale-config>
            <default-locale>fr</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>

        <resource-bundle>
            <base-name>be.jyl.messages</base-name>
            <var>bundle</var>
        </resource-bundle>
    </application>
</faces-config>